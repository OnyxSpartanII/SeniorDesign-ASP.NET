@model IEnumerable<SeniorDesignWebApp.Models.SentenceModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DispositionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SentenceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JailTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProbationTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuspensionTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fines)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommunityService)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConditionsOfRelease)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DispositionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SentenceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.JailTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProbationTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SuspensionTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fines)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CommunityService)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConditionsOfRelease)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ID }) |
                @Html.ActionLink("Details", "Details", new { id=item.ID }) |
                @Html.ActionLink("Delete", "Delete", new { id=item.ID })
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
